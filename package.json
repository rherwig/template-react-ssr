{
  "name": "react-ssr-template",
  "version": "2.3.0",
  "description": "Server side rendering template for React 16",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development babel-node src/index",
    "watch": "cross-env NODE_ENV=development babel-watch src/index",
    "build": "npm run build:client && npm run build:server && npm run build:node",
    "build:client": "cross-env NODE_ENV=production webpack -p --config webpack/client.production.js",
    "build:server": "cross-env NODE_ENV=production webpack -p --config webpack/server.production.js",
    "build:node": "cross-env NODE_ENV=production webpack -p --config webpack/node.production.js",
    "test": "jest"
  },
  "jest": {
    "setupFiles": ["./src/__tests__/setup.js"],
    "testMatch": [ "**/__tests__/**/(spec|test).js?(x)", "**/?(*.)+(spec|test).js?(x)" ],
    "moduleNameMapper": {
      "\\.styl$": "identity-obj-proxy"
    }
  },
  "keywords": [
    "ssr",
    "react",
    "fiber",
    "server side rendering",
    "express",
    "ejs"
  ],
  "author": {
    "name": "Rico Herwig",
    "email": "rherwig4711@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "ejs": "^2.5.7",
    "express": "^4.16.0",
    "helmet": "^3.12.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-universal-component": "^2.9.0",
    "shrink-ray": "^0.1.3",
    "webpack-flush-chunks": "^1.2.3",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-universal-import": "^2.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-hot-loader": "^1.3.9",
    "css-loader": "^0.28.11",
    "extract-css-chunks-webpack-plugin": "git+https://github.com/zackljackson/extract-css-chunks-webpack-plugin.git#webpack-4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "react-test-renderer": "^16.4.0",
    "stats-webpack-plugin": "^0.6.2",
    "style-loader": "^0.20.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-hot-server-middleware": "^0.5.0",
    "webpack-merge": "^4.1.2"
  }
}
